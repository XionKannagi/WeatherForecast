<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.zack.weatherforecast.RecommendActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="今日の服装"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12.3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/TextViewMinTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    tools:text="最低体感気温：" />

                <TextView
                    android:id="@+id/TextViewWeather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    tools:text="天気：" />

                <ImageView
                    android:id="@+id/imageViewRecommend"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="おすすめの服装:" />

                <TextView
                    android:id="@+id/TextViewRecommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" />

            </LinearLayout>

        </ScrollView>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:layout_width="@dimen/button_size_x2_5"
                android:layout_height="@dimen/button_size_x2_5"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:onClick="weatherPage"
                android:src="@drawable/ic_cloud_white_24dp" />

        </FrameLayout>


    </LinearLayout>

</LinearLayout>
